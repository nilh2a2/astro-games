---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import FeaturedCarousel from "@/components/FeaturedCarousel.astro";
import GameGrid from "@/components/GameGrid.astro";
import RecentlyAdded from "@/components/RecentlyAdded.astro";
import getSortedGames from "@/utils/getSortedGames";
import getGamesByCategory from "@/utils/getGamesByCategory";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";

const games = await getCollection("games");

const sortedGames = getSortedGames(games);
const featuredGames = sortedGames.filter(({ data }) => data.featured);
const popularGames = sortedGames.filter(({ data }) => data.popular);
const actionGames = getGamesByCategory(sortedGames, "action").slice(0, 4);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <!-- Hero Section -->
    <section id="hero" class:list={["py-12"]}>
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Play Free Games Online
      </h1>
      <p class="text-lg text-skin-base/90">
        Discover and play hundreds of fun, free games directly in your browser. No download required.
      </p>
      <div class="mt-6 flex flex-wrap gap-4">
        <LinkButton href="/category/action/">
          Browse Games
          <IconArrowRight class="inline-block rtl:-rotate-180" />
        </LinkButton>
      </div>
    </section>

    <hr class="my-8 border-dashed" />

    <!-- Featured Carousel -->
    {
      featuredGames.length > 0 && (
        <section id="featured-carousel" class="py-12">
          <h2 class="mb-6 text-3xl font-bold">Featured Games</h2>
          <FeaturedCarousel games={featuredGames} />
        </section>
      )
    }

    <hr class="my-8 border-dashed" />

    <!-- Category Preview: Action Games -->
    {
      actionGames.length > 0 && (
        <section id="action-preview" class="py-12">
          <div class="mb-6 flex items-center justify-between">
            <h2 class="text-3xl font-bold">Action Games</h2>
            <LinkButton href="/category/action/">
              View All
              <IconArrowRight class="inline-block rtl:-rotate-180" />
            </LinkButton>
          </div>
          <GameGrid games={actionGames} />
        </section>
      )
    }

    <hr class="my-8 border-dashed" />

    <!-- Recently Added Games -->
    {
      sortedGames.length > 0 && (
        <section id="recently-added" class="py-12">
          <div class="mb-6 flex items-center justify-between">
            <h2 class="text-3xl font-bold">Recently Added</h2>
            <LinkButton href="/category/action/">
              Browse All
              <IconArrowRight class="inline-block rtl:-rotate-180" />
            </LinkButton>
          </div>
          <RecentlyAdded games={sortedGames} limit={8} />
        </section>
      )
    }

    <hr class="my-8 border-dashed" />

    <!-- Popular Games -->
    {
      popularGames.length > 0 && (
        <section id="popular" class="py-12">
          <h2 class="mb-6 text-3xl font-bold">Popular Games</h2>
          <GameGrid games={popularGames.slice(0, 8)} />
        </section>
      )
    }
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
