---
import { type CollectionEntry, render } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import BackButton from "@/components/BackButton.astro";
import BackToTopButton from "@/components/BackToTopButton.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import GameMetadata from "@/components/GameMetadata.astro";
import RelatedGames from "@/components/RelatedGames.astro";
import GameCardCompact from "@/components/GameCardCompact.astro";
import ShareLinks from "@/components/ShareLinks.astro";
import { getCategoryPath } from "@/utils/getGamePath";
import { getCategoryLabel } from "@/utils/getCategoryLabels";
import { getRelatedGames } from "@/utils/getRelatedGames";
import { slugifyStr } from "@/utils/slugify";
import { getUiText } from "@/utils/getUiText";
import { SITE } from "@/config";

type Props = {
  game: CollectionEntry<"games">;
  games: CollectionEntry<"games">[];
};

const { game, games } = Astro.props;

const {
  title,
  description,
  gameUrl,
  ogImage: initOgImage,
  canonicalURL,
  pubDatetime,
  modDatetime,
  category,
  rating,
  thumbnail,
  coverImage,
} = game.data;

const { Content } = await render(game);

let ogImageUrl: string | undefined;

if (typeof initOgImage === "string") {
  ogImageUrl = initOgImage;
} else if (initOgImage?.src) {
  ogImageUrl = initOgImage.src;
}

const ogImage = ogImageUrl
  ? new URL(ogImageUrl, Astro.url.origin).href
  : undefined;

// SEO meta description
const enhancedDescription = `Play ${title} online for free! ${description} ${getUiText("game.metaDescriptionSuffix")}`;

const layoutProps = {
  title: `${title} | ${SITE.title}`,
  description: enhancedDescription,
  pubDatetime,
  modDatetime,
  canonicalURL,
  ogImage,
  scrollSmooth: true,
  schemaType: "VideoGame" as const,
  ogType: "video.other",
};

const relatedGamesList = getRelatedGames(games, game, 18);
const sidebarGames = relatedGamesList.slice(0, 5);
const bottomGames = relatedGamesList.slice(5);

// VideoGame schema
const gameStructuredData = {
  "@context": "https://schema.org",
  "@type": "VideoGame",
  name: title,
  description: description,
  genre: getCategoryLabel(category),
  gamePlatform: "Web Browser",
  playMode: "SinglePlayer",
  url: canonicalURL,
  image:
    ogImage ||
    (typeof thumbnail === "string" ? thumbnail : thumbnail?.src) ||
    (typeof coverImage === "string" ? coverImage : coverImage?.src),
  datePublished: pubDatetime?.toISOString(),
  ...(modDatetime && { dateModified: modDatetime.toISOString() }),
  ...(rating && {
    aggregateRating: {
      "@type": "AggregateRating",
      ratingValue: rating,
      bestRating: 5,
      worstRating: 0,
    },
  }),
  offers: {
    "@type": "Offer",
    price: "0",
    priceCurrency: "USD",
    availability: "https://schema.org/InStock",
  },
  applicationCategory: "Game",
  inLanguage: SITE.lang,
  publisher: {
    "@type": "Organization",
    name: SITE.title,
    logo: {
      "@type": "ImageObject",
      url: `${Astro.url.origin}/favicon.svg`,
    },
  },
};

// Breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: getUiText("breadcrumb.home"),
      item: `${Astro.url.origin}/`,
    },
    {
      "@type": "ListItem",
      position: 2,
      name: getCategoryLabel(category),
      item: `${Astro.url.origin}${getCategoryPath(category)}`,
    },
    {
      "@type": "ListItem",
      position: 3,
      name: title,
      item: canonicalURL,
    },
  ],
};

// FAQ schema
const gameFaqs = game.data.faqs;
const faqEntities = gameFaqs
  ? gameFaqs.map(faq => ({
      "@type": "Question" as const,
      name: faq.question,
      acceptedAnswer: {
        "@type": "Answer" as const,
        text: faq.answer,
      },
    }))
  : [
      {
        "@type": "Question" as const,
        name: getUiText("game.faq.howToPlayQuestion").replace("{title}", title),
        acceptedAnswer: {
          "@type": "Answer" as const,
          text: getUiText("game.faq.howToPlayAnswer")
            .replace("{title}", title)
            .replace("{category}", getCategoryLabel(category).toLowerCase()),
        },
      },
      {
        "@type": "Question" as const,
        name: getUiText("game.faq.isFreeQuestion").replace("{title}", title),
        acceptedAnswer: {
          "@type": "Answer" as const,
          text: getUiText("game.faq.isFreeAnswer").replace("{title}", title),
        },
      },
      {
        "@type": "Question" as const,
        name: getUiText("game.faq.mobileQuestion").replace("{title}", title),
        acceptedAnswer: {
          "@type": "Answer" as const,
          text: getUiText("game.faq.mobileAnswer").replace("{title}", title),
        },
      },
    ];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqEntities,
};
---

<Layout {...layoutProps}>
  <!-- Schema.org data -->
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [gameStructuredData, breadcrumbSchema, faqSchema],
    })}
  />
  <Header />
  <BackButton />
  <main id="main-content" class="app-layout mt-8 pb-12">
    <Breadcrumb
      items={[
        { label: getCategoryLabel(category), href: getCategoryPath(category) },
        { label: title },
      ]}
    />

    <div class="mb-8">
      <h1
        transition:name={slugifyStr(title.replaceAll(".", "-"))}
        class="mb-4 text-3xl font-bold text-accent sm:text-4xl"
      >
        {title}
      </h1>
      <GameMetadata game={game} />
    </div>

    <div class="mb-12 flex flex-col gap-6 lg:flex-row">
      <div class="flex-1 lg:w-7/10">
        <div class="space-y-4">
          <div
            id="game-player-container"
            class="relative aspect-video overflow-hidden rounded bg-black"
          >
            <iframe
              src={gameUrl}
              title={title}
              name={`${title} - Game Player`}
              class="h-full w-full border-0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; fullscreen"
              allowfullscreen
              sandbox="allow-scripts allow-same-origin allow-forms allow-popups allow-popups-to-escape-sandbox allow-modals allow-downloads allow-pointer-lock allow-presentation allow-storage-access-by-user-activation"
            ></iframe>
          </div>

          <div class="flex items-center justify-between gap-4">
            <ShareLinks />
            <button
              id="fullscreen-btn"
              type="button"
              class="border-skin-line bg-skin-fill text-skin-base hover:bg-skin-accent hover:text-skin-inverted focus:ring-skin-accent flex items-center gap-2 rounded-lg border px-4 py-2 transition-colors focus:ring-2 focus:outline-none"
              aria-label={getUiText("game.enterFullscreen")}
              data-enter-label={getUiText("game.enterFullscreen")}
              data-exit-label={getUiText("game.exitFullscreen")}
            >
              <svg
                id="maximize-icon"
                xmlns="http://www.w3.org/2000/svg"
                class="size-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"
                ></path>
              </svg>
              <svg
                id="minimize-icon"
                xmlns="http://www.w3.org/2000/svg"
                class="hidden size-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9 9V4.5M9 9H4.5M9 9L3.75 3.75M9 15v4.5M9 15H4.5M9 15l-5.25 5.25M15 9h4.5M15 9V4.5M15 9l5.25-5.25M15 15h4.5M15 15v4.5m0-4.5l5.25 5.25"
                ></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <div class="hidden flex-shrink-0 lg:flex lg:w-3/10">
        <div class="w-full">
          <div
            class="scrollbar-thin scrollbar-thumb-skin-accent/30 scrollbar-track-transparent max-h-[600px] space-y-3 overflow-y-auto pr-2"
          >
            {
              sidebarGames.map(relatedGame => (
                <GameCardCompact {...relatedGame} />
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <div class="app-prose mb-12 max-w-none">
      <Content />
    </div>

    {
      faqEntities.length > 0 && (
        <div class="mb-12">
          <h2 class="mb-6 text-2xl font-bold">
            {getUiText("game.frequentlyAskedQuestions")}
          </h2>
          <div class="space-y-4">
            {faqEntities.map(faq => (
              <details class="border-skin-line bg-skin-card-muted group rounded-lg border">
                <summary class="hover:bg-skin-card text-skin-base flex cursor-pointer items-center justify-between px-6 py-4 font-medium transition-colors">
                  <span>{faq.name}</span>
                  <svg
                    class="text-skin-accent size-5 transition-transform group-open:rotate-180"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                </summary>
                <div class="text-skin-base/80 border-skin-line border-t px-6 py-4">
                  {faq.acceptedAnswer.text}
                </div>
              </details>
            ))}
          </div>
        </div>
      )
    }

    <hr class="my-8 border-dashed" />

    {
      relatedGamesList.length > 0 && (
        <div class="mb-12">
          <h2 class="mb-6 text-2xl font-bold">
            {getUiText("game.relatedGames")}
          </h2>
          <div class="lg:hidden">
            <RelatedGames games={relatedGamesList} />
          </div>
          <div class="hidden lg:block">
            {bottomGames.length > 0 && <RelatedGames games={bottomGames} />}
          </div>
        </div>
      )
    }

    <BackToTopButton />
  </main>
  <Footer />

  <script>
    const fullscreenBtn = document.getElementById("fullscreen-btn");
    const gameContainer = document.getElementById("game-player-container");
    const maximizeIcon = document.getElementById("maximize-icon");
    const minimizeIcon = document.getElementById("minimize-icon");

    if (fullscreenBtn && gameContainer && maximizeIcon && minimizeIcon) {
      const enterLabel = fullscreenBtn.dataset.enterLabel!;
      const exitLabel = fullscreenBtn.dataset.exitLabel!;

      fullscreenBtn.addEventListener("click", async () => {
        try {
          if (!document.fullscreenElement) {
            await gameContainer.requestFullscreen();
          } else {
            await document.exitFullscreen();
          }
        } catch {
          // Silently handle fullscreen errors
        }
      });

      document.addEventListener("fullscreenchange", () => {
        if (document.fullscreenElement) {
          maximizeIcon.classList.add("hidden");
          minimizeIcon.classList.remove("hidden");
          fullscreenBtn.setAttribute("aria-label", exitLabel);
        } else {
          maximizeIcon.classList.remove("hidden");
          minimizeIcon.classList.add("hidden");
          fullscreenBtn.setAttribute("aria-label", enterLabel);
        }
      });
    }
  </script>

  <script is:inline define:vars={{ categoryPath: getCategoryPath(category) }}>
    // Set the back URL to the category page
    sessionStorage.setItem("backUrl", categoryPath);
  </script>
</Layout>
