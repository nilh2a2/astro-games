---
import { type CollectionEntry, render } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import BackButton from "@/components/BackButton.astro";
import BackToTopButton from "@/components/BackToTopButton.astro";
import GameMetadata from "@/components/GameMetadata.astro";
import RelatedGames from "@/components/RelatedGames.astro";
import GameCardCompact from "@/components/GameCardCompact.astro";
import ShareLinks from "@/components/ShareLinks.astro";
import { getCategoryPath } from "@/utils/getGamePath";
import { getCategoryLabel } from "@/utils/getCategoryLabels";
import getRelatedGames from "@/utils/getRelatedGames";
import { slugifyStr } from "@/utils/slugify";
import { getUiText } from "@/utils/getUiText";
import { SITE } from "@/config";

type Props = {
  game: CollectionEntry<"games">;
  games: CollectionEntry<"games">[];
};

const { game, games } = Astro.props;

const {
  title,
  description,
  gameUrl,
  ogImage: initOgImage,
  canonicalURL,
  pubDatetime,
  modDatetime,
  category,
  rating,
  thumbnail,
  coverImage,
} = game.data;

const { Content } = await render(game);

let ogImageUrl: string | undefined;

if (typeof initOgImage === "string") {
  ogImageUrl = initOgImage;
} else if (initOgImage?.src) {
  ogImageUrl = initOgImage.src;
}

const ogImage = ogImageUrl
  ? new URL(ogImageUrl, Astro.url.origin).href
  : undefined;

// Enhanced meta description for better SEO
const enhancedDescription = `Play ${title} online for free! ${description} ${getUiText("game.metaDescriptionSuffix")}`;

const layoutProps = {
  title: `${title} | ${SITE.title}`,
  description: enhancedDescription,
  pubDatetime,
  modDatetime,
  canonicalURL,
  ogImage,
  scrollSmooth: true,
  schemaType: "VideoGame" as const,
  ogType: "video.other",
};

const relatedGamesList = getRelatedGames(games, game, 18);
const sidebarGames = relatedGamesList.slice(0, 5);
const bottomGames = relatedGamesList.slice(5);

// VideoGame structured data
const gameStructuredData = {
  "@context": "https://schema.org",
  "@type": "VideoGame",
  name: title,
  description: description,
  genre: getCategoryLabel(category),
  gamePlatform: "Web Browser",
  playMode: "SinglePlayer",
  url: canonicalURL,
  image:
    ogImage ||
    (typeof thumbnail === "string" ? thumbnail : thumbnail?.src) ||
    (typeof coverImage === "string" ? coverImage : coverImage?.src),
  datePublished: pubDatetime?.toISOString(),
  ...(modDatetime && { dateModified: modDatetime.toISOString() }),
  ...(rating && {
    aggregateRating: {
      "@type": "AggregateRating",
      ratingValue: rating,
      bestRating: 5,
      worstRating: 0,
    },
  }),
  offers: {
    "@type": "Offer",
    price: "0",
    priceCurrency: "USD",
    availability: "https://schema.org/InStock",
  },
};

// Breadcrumb structured data
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: getUiText("breadcrumb.home"),
      item: `${Astro.url.origin}/`,
    },
    {
      "@type": "ListItem",
      position: 2,
      name: getCategoryLabel(category),
      item: `${Astro.url.origin}${getCategoryPath(category)}`,
    },
    {
      "@type": "ListItem",
      position: 3,
      name: title,
      item: canonicalURL,
    },
  ],
};

// FAQ structured data for common game questions
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: `How do I play ${title}?`,
      acceptedAnswer: {
        "@type": "Answer",
        text: `${title} is a free online ${getCategoryLabel(category).toLowerCase()} game. Simply click the play button above to start playing instantly in your browser. No downloads or installations required.`,
      },
    },
    {
      "@type": "Question",
      name: `Is ${title} free to play?`,
      acceptedAnswer: {
        "@type": "Answer",
        text: `Yes, ${title} is completely free to play online. You can enjoy the full game without any cost, downloads, or registration.`,
      },
    },
    {
      "@type": "Question",
      name: `Can I play ${title} on mobile?`,
      acceptedAnswer: {
        "@type": "Answer",
        text: `${title} can be played on most modern devices including desktop computers, laptops, tablets, and mobile phones with a web browser.`,
      },
    },
  ],
};
---

<Layout {...layoutProps}>
  <!-- VideoGame Schema -->
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify(gameStructuredData)}
  />
  <!-- Breadcrumb Schema -->
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify(breadcrumbSchema)}
  />
  <!-- FAQ Schema -->
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify(faqSchema)}
  />
  <Header />
  <BackButton />
  <main id="main-content" class="app-layout mt-8 pb-12">
    <!-- Breadcrumb -->
    <nav class="mb-6 flex items-center gap-2 text-sm">
      <a href="/" class="text-skin-accent hover:underline"
        >{getUiText("breadcrumb.home")}</a
      >
      <span class="text-skin-base/60">{getUiText("breadcrumb.separator")}</span>
      <a
        href={getCategoryPath(category)}
        class="text-skin-accent hover:underline"
      >
        {getCategoryLabel(category)}
      </a>
      <span class="text-skin-base/60">{getUiText("breadcrumb.separator")}</span>
      <span class="text-skin-base">{title}</span>
    </nav>

    <!-- Game Header -->
    <div class="mb-8">
      <h1
        transition:name={slugifyStr(title.replaceAll(".", "-"))}
        class="mb-4 text-3xl font-bold text-accent sm:text-4xl"
      >
        {title}
      </h1>
      <GameMetadata game={game} />
    </div>

    <!-- Game Player Section with Related Games Sidebar -->
    <div class="mb-12 flex flex-col gap-6 lg:flex-row">
      <!-- Left Column: Game Player (70%) -->
      <div class="flex-1 lg:w-7/10">
        <div
          id="game-player-container"
          class="relative aspect-video overflow-hidden rounded bg-black"
        >
          <iframe
            src={gameUrl}
            title={title}
            class="h-full w-full border-0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>
        </div>
      </div>

      <!-- Right Column: Related Games Sidebar (30%) - Desktop Only -->
      <div class="hidden flex-shrink-0 lg:flex lg:w-3/10">
        <div class="w-full">
          <div
            class="scrollbar-thin scrollbar-thumb-skin-accent/30 scrollbar-track-transparent max-h-[600px] space-y-3 overflow-y-auto pr-2"
          >
            {
              sidebarGames.map(relatedGame => (
                <GameCardCompact {...relatedGame} />
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Share Links and Fullscreen Button -->
    <div class="mb-8 flex items-center justify-between gap-4">
      <ShareLinks />
      <button
        id="fullscreen-btn"
        type="button"
        class="border-skin-line bg-skin-fill text-skin-base hover:bg-skin-accent hover:text-skin-inverted focus:ring-skin-accent flex items-center gap-2 rounded-lg border px-4 py-2 transition-colors focus:ring-2 focus:outline-none"
        aria-label={getUiText("game.enterFullscreen")}
      >
        <svg
          id="maximize-icon"
          xmlns="http://www.w3.org/2000/svg"
          class="size-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"
          ></path>
        </svg>
        <svg
          id="minimize-icon"
          xmlns="http://www.w3.org/2000/svg"
          class="hidden size-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 9V4.5M9 9H4.5M9 9L3.75 3.75M9 15v4.5M9 15H4.5M9 15l-5.25 5.25M15 9h4.5M15 9V4.5M15 9l5.25-5.25M15 15h4.5M15 15v4.5m0-4.5l5.25 5.25"
          ></path>
        </svg>
      </button>
    </div>

    <!-- Game Content -->
    <div class="app-prose mb-12 max-w-none">
      <Content />
    </div>

    <hr class="my-8 border-dashed" />

    <!-- Related Games -->
    {
      relatedGamesList.length > 0 && (
        <div class="mb-12">
          <h2 class="mb-6 text-2xl font-bold">
            {getUiText("game.relatedGames")}
          </h2>
          {/* Mobile: Show all games (sidebar hidden on mobile) */}
          <div class="lg:hidden">
            <RelatedGames games={relatedGamesList} />
          </div>
          {/* Desktop: Show remaining games (first 5 are in sidebar) */}
          <div class="hidden lg:block">
            {bottomGames.length > 0 && <RelatedGames games={bottomGames} />}
          </div>
        </div>
      )
    }

    <BackToTopButton />
  </main>
  <Footer />

  <script>
    const fullscreenBtn = document.getElementById("fullscreen-btn");
    const gameContainer = document.getElementById("game-player-container");
    const maximizeIcon = document.getElementById("maximize-icon");
    const minimizeIcon = document.getElementById("minimize-icon");

    if (fullscreenBtn && gameContainer && maximizeIcon && minimizeIcon) {
      // Toggle fullscreen
      fullscreenBtn.addEventListener("click", async () => {
        try {
          if (!document.fullscreenElement) {
            await gameContainer.requestFullscreen();
          } else {
            await document.exitFullscreen();
          }
        } catch {
          // Silently handle fullscreen errors
        }
      });

      // Update button state on fullscreen change
      document.addEventListener("fullscreenchange", () => {
        if (document.fullscreenElement) {
          maximizeIcon.classList.add("hidden");
          minimizeIcon.classList.remove("hidden");
          fullscreenBtn.setAttribute("aria-label", "Exit fullscreen");
        } else {
          maximizeIcon.classList.remove("hidden");
          minimizeIcon.classList.add("hidden");
          fullscreenBtn.setAttribute("aria-label", "Enter fullscreen");
        }
      });
    }
  </script>
</Layout>
