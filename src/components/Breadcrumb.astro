---
import { getUiText } from "@/utils/getUiText";

interface Props {
  items?: Array<{ label: string; href?: string }>;
}

const { items } = Astro.props;

const breadcrumbItems = items || [];
---

<nav
  class="mb-6 flex items-center gap-2 text-sm"
  aria-label={getUiText("breadcrumb.ariaLabel")}
>
  <a href="/" class="text-skin-accent hover:underline"
    >{getUiText("breadcrumb.home")}</a
  >
  {
    breadcrumbItems.map(item => (
      <>
        <span class="text-skin-base/60">
          {getUiText("breadcrumb.separator")}
        </span>
        {item.href ? (
          <a href={item.href} class="text-skin-accent hover:underline">
            {item.label}
          </a>
        ) : (
          <span class="text-skin-base">{item.label}</span>
        )}
      </>
    ))
  }
</nav>
