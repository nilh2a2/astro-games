---
import type { HTMLAttributes } from "astro/types";
import Socials from "./Socials.astro";
import { getUiText } from "@/utils/getUiText";

const currentYear = new Date().getFullYear();

type Props = {
  noMarginTop?: boolean;
} & HTMLAttributes<"footer">;

const { noMarginTop = false, class: className, ...attrs } = Astro.props;
---

<footer
  class:list={["app-layout", { "mt-auto": !noMarginTop }, className]}
  {...attrs}
>
  <!-- Navigation Links -->
  <nav class="py-4 border-t border-border">
    <ul class="flex flex-wrap items-center justify-center gap-x-2 text-sm">
      <li><a href="/about" class="hover:text-accent">About</a></li>
      <li class="text-border">|</li>
      <li><a href="/help" class="hover:text-accent">Help</a></li>
      <li class="text-border">|</li>
      <li><a href="/privacy" class="hover:text-accent">Privacy</a></li>
      <li class="text-border">|</li>
      <li><a href="/terms" class="hover:text-accent">Terms</a></li>
      <li class="text-border">|</li>
      <li><a href="/contact" class="hover:text-accent">Contact</a></li>
    </ul>
  </nav>

  <div
    class:list={[
      "py-6 sm:py-4",
      "border-t border-border",
      "flex flex-col items-center justify-between sm:flex-row-reverse",
    ]}
  >
    <Socials />
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row">
      <span>{getUiText("footer.copyright")} {currentYear}</span>
      <span class="hidden sm:inline">&nbsp;|&nbsp;</span>
      <span>{getUiText("footer.allRightsReserved")}</span>
    </div>
  </div>
</footer>
