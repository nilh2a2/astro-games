---
import type { CollectionEntry } from "astro:content";
import { getCategoryPath } from "@/utils/getGamePath";
import { getCategoryLabel } from "@/utils/getCategoryLabels";
import { getUiText } from "@/utils/getUiText";

type Props = {
  game: CollectionEntry<"games">;
};

const { game } = Astro.props;
const { category, rating, developer } = game.data;
const categoryPath = getCategoryPath(category);
---

<div class="text-skin-base/80 flex flex-wrap items-center gap-4 text-sm">
  <a
    href={categoryPath}
    class="bg-skin-accent/10 text-skin-accent hover:bg-skin-accent/20 inline-flex items-center gap-1 rounded px-3 py-1 font-medium"
  >
    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
      ></path>
    </svg>
    {getCategoryLabel(category)}
  </a>

  {
    rating && (
      <div class="flex items-center gap-1">
        <svg class="h-5 w-5 fill-yellow-500" viewBox="0 0 20 20">
          <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z" />
        </svg>
        <span class="font-semibold">{rating.toFixed(1)}</span>
        <span class="text-skin-base/60">{getUiText("game.ratingOutOf")}</span>
      </div>
    )
  }

  {
    developer && (
      <div class="flex items-center gap-1">
        <svg
          class="h-4 w-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
          />
        </svg>
        <span>{developer}</span>
      </div>
    )
  }
</div>
