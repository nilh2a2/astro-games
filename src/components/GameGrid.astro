---
import type { CollectionEntry } from "astro:content";
import GameCard from "./GameCard.astro";

type Props = {
  games: CollectionEntry<"games">[];
  variant?: "h2" | "h3";
};

const { games, variant = "h2" } = Astro.props;
---

<ul class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6">
  {games.map(game => <GameCard {...game} variant={variant} />)}
</ul>
