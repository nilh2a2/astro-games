---
import type { CollectionEntry } from "astro:content";
import GameGrid from "./GameGrid.astro";
import getSortedGames from "@/utils/getSortedGames";

type Props = {
  games: CollectionEntry<"games">[];
  limit?: number;
};

const { games, limit = 8 } = Astro.props;

const sortedGames = getSortedGames(games).slice(0, limit);
---

{sortedGames.length > 0 && (
  <GameGrid games={sortedGames} />
)}
